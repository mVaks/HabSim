<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_height="fill_parent"
 android:layout_width="fill_parent"
 android:orientation="horizontal"
 android:weightSum="1.0">

<LinearLayout
    android:layout_weight=".6"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:orientation="vertical" >

    <SeekBar
        android:id="@+id/seekBarTimeAcceleration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
          android:layout_weight=".2"
        android:max="10" />

     <SeekBar
         android:id="@+id/seekBarDifficulty"
         android:layout_width="match_parent"
         android:layout_height="0dp"
          android:layout_weight=".2"
         android:max="2" />

     <SeekBar
         android:id="@+id/seekBarSound"
         android:layout_width="match_parent"
         android:layout_height="0dp"
          android:layout_weight=".2"
         android:max="100" />
     
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
          android:layout_weight=".2"/>
</LinearLayout>

<LinearLayout
       android:layout_weight=".4"
    android:orientation="vertical"
        android:layout_width="0dp"
        android:weightSum="1.0"
    android:layout_height="match_parent" >

    <TextView
        
        android:id="@+id/textViewTimeAcceleration"
       
        android:layout_width="wrap_content"
           android:layout_height="0dp"
          android:layout_weight=".2"
      
        android:textSize="@dimen/font_size_medium" />

   

    <TextView
        android:id="@+id/textViewDifficulty"
        android:layout_width="wrap_content"
  		android:textSize="@dimen/font_size_medium"
           android:layout_height="0dp"
          android:layout_weight=".2"/>

    
    <TextView
        android:id="@+id/textViewSound"
        android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight=".2"
   android:textSize="@dimen/font_size_medium" />

    <TextView
        android:id="@+id/textViewNotification"
        android:layout_width="wrap_content"
           android:layout_height="0dp"
          android:layout_weight=".2"
   android:textSize="@dimen/font_size_medium"
           android:text="@string/notifications" />
    
    <TextView
        android:id="@+id/textViewNotificationSettings"
        android:layout_width="wrap_content"
           android:layout_height="0dp"
          android:layout_weight=".2"
   android:textSize="@dimen/font_size_small"
           android:text="@string/notifications_setting" />

</LinearLayout>
</LinearLayout>